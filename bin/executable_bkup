#!/usr/bin/env zsh

set -o errexit
set -o nounset
set -o pipefail
if [[ "${TRACE-0}" == "1" ]]; then
    set -o xtrace
fi

if [[ "${1-}" =~ ^-*h(elp)?$ ]]; then
    echo 'Usage: bkup

bkup claudius to tarsnap

'
    exit
fi

cd "$(dirname "$0")"

main() {
# Set up archive name
computer=claudius
now=$(date +%Y-%m-%d_%H-%M-%S)
name=${computer}-${now}

# Create an archive
tarsnap -c \
    --print-stats \
    --cachedir "$HOME/.tarsnap" \
    --keyfile "$HOME/tarsnap.key" \
    -f "${name}" \
    "$HOME/3d" "$HOME/2d" "$HOME/Documents"
}

main "$@"
