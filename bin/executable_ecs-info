#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
if [[ "${TRACE-0}" == "1" ]]; then
    set -o xtrace
fi

if [[ "${1-}" =~ ^-*h(elp)?$ ]]; then
    echo 'Usage: ./ecs-info cluster service region

    e.g. ./ecs-info s1 myService us-east-1

Displays service instance counts for an ecs service

'
    exit
fi

main() {
    cluster=${1:-s1}
    services=${2-}
    region=${3-us-east-2}

    aws ecs describe-services \
        --region "$region" \
        --cluster "$cluster" \
        --services "$services" \
        | jq '.services[0] | {name: .serviceName, desired: .desiredCount, running: .runningCount, pending: .pendingCount}'
}

main "$@"

