#! /usr/bin/env bash
set -euo pipefail

environments=("dev" "staging" "demo" "production")
urls=("test1" "api.staging" "api.demo2" "api")

echo rapi
for i in "${!environments[@]}"; do
  version=$(curl -s "https://${urls[$i]}.readytopay.co/ping" | jq -r .ApplicationVersion)
  echo "${environments[$i]} v$version"
done

echo -e "\n\ndapi"
for i in "${!environments[@]}"; do
  version=$(curl -s "https://${urls[$i]}.readytopay.co/dashboard/ping" | jq -r .ApplicationVersion)
  echo "${environments[$i]} v$version"
done
