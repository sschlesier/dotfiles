{
  "permissions": {
    "allow": [
      "Bash(ls *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(cut *)",
      "Bash(file *)",
      "Bash(stat *)",
      "Bash(du *)",
      "Bash(tree *)",
      "Bash(which *)",
      "Bash(pwd)",
      "Bash(date)",
      "Bash(whoami)",
      "Bash(npm run ts-compile *)",
      "Bash(npx tsc *)",
      "WebSearch"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
