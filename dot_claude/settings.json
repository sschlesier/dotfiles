{
  "permissions": {
    "deny": [
      "Bash(git reset --hard*)",
      "Bash(git clean *)",
      "Bash(rm -rf *)"
    ],
    "allow": [
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(pnpm *)",
      "Bash(cargo *)",
      "WebSearch"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
