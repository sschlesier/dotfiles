[user]
	name = Scott S.
[core]
	autocrlf = input
	excludesfile = /Users/scotts/.gitignore_global
	safecrlf = false
	pager = diff-so-fancy | less --tabs=4 -RFX
	filemode = false
[include]
	path = ~/.git-alias.config
	path = ~/.git-indirection
[push]
	default = upstream
[rerere]
	enabled = 1
[grep]
	extendRegexp = true
[blame]
	date = short
[status]
	showUntrackedFiles = all
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
	prompt = false
[diff]
	tool = vimdiff
[alias]
	ignore = "!gi() { curl -sL https://www.gitignore.io/api/$@ ;}; gi"
[init]
	defaultBranch = main
