nvm-use() {
	if [[ -f package.json ]]; then
	    ver=$( jq -r '.engines.node' < package.json | ag --only-matching '[0-9.]+' )
        if [[ -n $ver ]]; then
            ver=v"$ver"
            echo using node "$ver"
            nvm use "$ver"
        else
            echo Could not find node version in package.json using default node
            nvm use default
        fi
	else
	    echo Cannot find package.json using default node
        nvm use default
	fi
}
nvm-use
